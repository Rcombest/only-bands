<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
	<p><%= currentfav.owner.name %> is feeling this one!</p>
  <h1>🔥<%= currentfav.song %> by <%= currentfav.band %>🔥</h1>
  <% if (currentfav.owner.equals(user?.profile._id)) { %>
    <a href="/currentfavs/<%= currentfav._id %>/edit">
      <button class="btn">Edit Fav Song</button>
    </a>
    <form action="/currentfavs/<%= currentfav._id %>?_method=DELETE" method="POST">
      <button class="btn" type="submit">Delete Fav ❌</button>
    </form>
  <% } %> 
</section>

<%- include('../partials/footer') %>